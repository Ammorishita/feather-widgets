@model Telerik.Sitefinity.Frontend.Identity.Mvc.Models.LoginForm.LoginFormViewModel

@using Telerik.Sitefinity.UI.MVC;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Modules.Pages;

@*Add scripts and stylesheets*@
@Html.Script(ScriptRef.JQuery)
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.8.1/jquery.validate.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>

<div class="@Model.CssClass">
<form id="loginForm" action="@Model.ServiceUrl" method="post">
    <div>
        <fieldset>
         @Html.ValidationSummary(true)
            <legend>@Html.Resource("LoginFormLogInLegendHeader")</legend>
            <div class="editor-label">
                @Html.LabelFor(u => u.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.UserName, new { Name = "wrap_name" })
                @Html.ValidationMessage("wrap_name")
            </div>
            <div class="editor-label">
                @Html.LabelFor(u => u.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password, new { Name = "wrap_password" })
                @Html.ValidationMessage("wrap_password")
            </div>
            @if (Model.ShowRememberMe)
            {
            <div class="editor-label">
                @Html.CheckBoxFor(u => u.RememberMe)
                <input type="hidden" id="sf_persistent" name="sf_persistent" value="false"/>
                @Html.LabelFor(u => u.RememberMe)
            </div>
            }
            <div class="editor-label">
                @Html.HiddenFor(u => u.MembershipProvider, new { Name = "sf_domain" })
                @Html.HiddenFor(u => u.RedirectUrlAfterLogin, new { Name = "redirect_uri" })
                @Html.HiddenFor(u => u.Realm, new { Name = "realm" })
                <input type="hidden" name="deflate" value="true" />
            </div>
            <div class="error" style="display:none"></div>
            <input type="submit" value='@Html.Resource("LoginFormLogInButton")' />
            
            @Html.ActionLink("Forgotten Password", "ForgotPassword")
        </fieldset>
        <a href="@Model.RegisterPageUrl">@Html.Resource("LoginFormRegisterNow")</a>
    </div>
</form>
</div>

@Html.Script(Url.WidgetContent("Mvc/Scripts/LoginForm/login-form.js"))
