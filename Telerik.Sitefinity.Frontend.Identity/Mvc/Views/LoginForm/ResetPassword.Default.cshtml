@model Telerik.Sitefinity.Frontend.Identity.Mvc.Models.LoginForm.ResetPasswordViewModel

@using Telerik.Sitefinity.UI.MVC;

<div class="@Model.CssClass">

@if (Model.ResetComplete)
{
    <p>Your password is successfully changed.</p>
    <a href="#">Back to login</a>
}
else
{
    using (Html.BeginForm("SetResetPassword", "LoginForm"))
    {
        <div class="sf-error">@Model.Error</div>
    
        <div class="editor-label">
            @Html.DisplayFor(u => u.NewPassword)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(u => u.NewPassword)
        </div>

        <div class="editor-label">
            @Html.DisplayFor(u => u.RepeatNewPassword)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(u => u.RepeatNewPassword)
        </div>
    
        <input type="submit" value="Save" />
    }
}

</div>
