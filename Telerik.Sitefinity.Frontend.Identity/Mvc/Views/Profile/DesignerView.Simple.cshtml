@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Frontend.Identity.Mvc.Models.Profile;

<div class="form-group nav-wrapper">
	<label class="radio-inline">
		<input type="radio" ng-model="properties.Mode.PropertyValue" ng-value="ViewMode.EditOnly" />
		@Html.Resource("EditModeOnly")
	</label>

	<label class="radio-inline">
		<input type="radio" ng-model="properties.Mode.PropertyValue" ng-value="ViewMode.ReadOnly" />
		@Html.Resource("ReadModeOnly")
	</label>

    <label class="radio-inline">
		<input type="radio" ng-model="properties.Mode.PropertyValue" ng-value="ViewMode.Both" />
		@Html.Resource("BothModes")
	</label>
</div>

<div ng-show="properties.Mode.PropertyValue===ViewMode.EditOnly">
    <div class="form-group">
        <label>@Html.Resource("WhenChangesAreSaved")</label>
        <div class="radio">
            <label>
                <input type="radio" ng-model="properties.SaveChangesAction.PropertyValue" ng-value="SaveAction.ShowMessage">@Html.Resource("ShowMsg")
            </label>
        </div>
        <textarea ng-model="properties.ProfileSaveMsg.PropertyValue" class="label-content" 
            ng-show="properties.SaveChangesAction.PropertyValue===SaveAction.ShowMessage" rows="2" cols="20"></textarea>
        <div class="radio">
            <label>
                <input type="radio" ng-model="properties.SaveChangesAction.PropertyValue" ng-value="SaveAction.ShowPage">@Html.Resource("OpenPage")
            </label>
        </div>
        <sf-list-selector
            class="label-content"
            sf-page-selector
            sf-selected-item-id="properties.ProfileSavedPageId.PropertyValue"
            ng-show="properties.SaveChangesAction.PropertyValue===SaveAction.ShowPage"></sf-list-selector>
    </div>

    <div class="form-group">
        <label for="templateName">@Html.Resource("Template")</label>
        <div class="row">
            <div class="col-xs-6">
                <select id="templateName" ng-model="properties.TemplateName.PropertyValue" class="form-control">
                        @foreach (var viewName in Html.GetViewNames("Profile", @"EditOnly\.(?<viewName>\w*)$"))
                    {
                        <option value="@viewName">@viewName</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>

<div ng-show="properties.Mode.PropertyValue===ViewMode.ReadOnly">
    <div class="form-group">
        <label for="templateName">@Html.Resource("Template")</label>
        <div class="row">
            <div class="col-xs-6">
                <select id="templateName" ng-model="properties.TemplateName.PropertyValue" class="form-control">
                        @foreach (var viewName in Html.GetViewNames("Profile", @"ReadOnly\.(?<viewName>\w*)$"))
                    {
                        <option value="@viewName">@viewName</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>

<div ng-show="properties.Mode.PropertyValue===ViewMode.Both">
    <div class="form-group">
        <label>@Html.Resource("WhenChangesAreSaved")</label>
        <div class="radio">
            <label>
                <input type="radio" ng-model="properties.SaveChangesAction.PropertyValue" ng-value="SaveAction.SwitchToReadMode">@Html.Resource("SwitchToReadMode")
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" ng-model="properties.SaveChangesAction.PropertyValue" ng-value="SaveAction.ShowMessage">@Html.Resource("ShowMsg")
            </label>
        </div>
        <textarea ng-model="properties.ProfileSaveMsg.PropertyValue" class="label-content" ng-show="properties.SaveChangesAction.PropertyValue==SaveAction.ShowMessage" rows="2" cols="20"></textarea>
        <div class="radio">
            <label>
                <input type="radio" ng-model="properties.SaveChangesAction.PropertyValue" ng-value="SaveAction.ShowPage">@Html.Resource("OpenPage")
            </label>
        </div>
        <sf-list-selector
            class="label-content"
            sf-page-selector
            sf-selected-item-id="properties.ProfileSavedPageId.PropertyValue"
            ng-show="properties.SaveChangesAction.PropertyValue===SaveAction.ShowPage"></sf-list-selector>
    </div>

    <div class="form-group">
        <label for="templateName">@Html.Resource("Template")</label>
        <div class="row">
            <div class="col-xs-6">
                <select id="templateName" ng-model="properties.TemplateName.PropertyValue" class="form-control">
                        @foreach (var viewName in Html.GetViewNames("Profile", @"Both\.(?<viewName>\w*)$"))
                    {
                        <option value="@viewName">@viewName</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>

<expander expander-title='@Html.Resource("MoreOptions")'>
    <style-dropdown selected-class="properties.CssClass.PropertyValue" view-name="properties.TemplateName.PropertyValue"></style-dropdown>

    <div class="form-group">
        <label >@Html.Resource("CssClasses")
            <input type="text" ng-model="properties.CssClass.PropertyValue" class="form-control" />
        </label>
    </div>
</expander>