@using Telerik.Sitefinity.Frontend.Mvc.Helpers

<div id="shareDialog" ng-controller="ShareDialogCtrl">
    <script type="text/ng-template" id="shareDialogContent" >
         <div class="modal-header">
             <button type="button" class="close" ng-click="Cancel()" aria-hidden="true">&times;</button>
             <h1 class="modal-title">Share content block</h1>
         </div>
         <div class="modal-body">
            <div ng-show="ShowError" class="alert alert-danger">
                <a class="close" data-dismiss="alert">x</a>
                <strong>Error!</strong> <span ng-bind="ErrorMessage"></span>
            </div>

            <div ng-show="ShowLoadingIndicator" class="s-loading m-bottom-sm"></div>
            <div ng-class="{'form-group':true, 'has-error': !IsTitleValid}">
                <label for="sharedContentTitle" class="control-label">@this.Label("Title")</label>
                <input id="sharedContentTitle" type="text" class="form-control" ng-model="Title" />
                <p ng-hide="IsTitleValid" class="text-danger">Title is required!</p>
            </div>
         </div>
         <div class="modal-footer">
             <button type="button" class="btn btn-primary" ng-click="ShareContent()">@this.Label("ShareContent")</button>
             <button type="button" class="btn btn-link" ng-click="Cancel()">@this.Label("Cancel")</button>
         </div>
    </script>
</div>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href='@Url.WidgetContent("Mvc/Scripts/Bootstrap/css/bootstrap.min.css")'>
<!-- Optional theme -->
<link rel="stylesheet" href='@Url.WidgetContent("Mvc/Styles/sitefinity-theme.min.css")'>

<script src='@Url.WidgetContent("Mvc/Scripts/ShareDialogModule.js")'></script>
<script src='@Url.WidgetContent("Mvc/Scripts/ContentBlock/shared-content-services.js")'></script>

<script type="text/javascript">
    (function ($) {
        //This is the place where we bootstrap the data passed by the controller. We do that by creating a angular service which will return the data object
        angular.module('sharedContentServices').factory('descriptorService', function () {
            return {
                contentItemsServiceUrl: '@Url.Content("~/Sitefinity/Services/Content/ContentItemService.svc/")',
                blankDataItem: '@Html.Raw(ViewBag.BlankDataItem)'
            };
        });

        angular.bootstrap($("#shareDialog"), ['shareDialog']);
    })(jQuery);
</script>