@using Telerik.Sitefinity.Frontend.Forms.Mvc.Helpers;
@using Telerik.Sitefinity.Frontend.Forms.Mvc.Models.Fields.TextField;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Mvc;

<div class="form-group">
    <h4>@Html.Resource("WhatsThis")</h4>
    <p>
        @Html.Resource("WhatsRecaptchaDescription") 
        <a href="https://www.google.com/recaptcha/intro/index.html" target="_blank">@Html.Resource("LearnMore")</a>
    </p>

    <div class="checkbox">
        <label for="requestUnauthenticatedUsers">
            <input id="requestUnauthenticatedUsers" type="checkbox" ng-model="properties.DisplayOnlyForUnauthenticatedUsers.PropertyValue"
                   ng-true-value="'True'" ng-false-value="'False'" ng-checked="properties.DisplayOnlyForUnauthenticatedUsers.PropertyValue === 'True'" />
            @Html.Resource("RequestUnauthenticatedUsersOnly")
        </label>
    </div>

    <div class="form-group">
        <label for="captchaTheme">@Html.Resource("Theme")</label>

        <div class="row">
            <div class="col-xs-6">
                <select id="captchaTheme" ng-model="properties.Model.Theme.PropertyValue" class="form-control">
                    <option value="light">@Html.Resource("Light")</option>
                    <option value="dark">@Html.Resource("Dark")</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="captchaType">@Html.Resource("Type")</label>

        <div class="row">
            <div class="col-xs-6">
                <select id="captchaType" ng-model="properties.Model.DataType.PropertyValue" class="form-control">
                    <option value="image">@Html.Resource("Image")</option>
                    <option value="audio">@Html.Resource("Audio")</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="captchaTheme">@Html.Resource("Size")</label>

        <div class="row">
            <div class="col-xs-6">
                <select id="captchaTheme" ng-model="properties.Model.Size.PropertyValue" class="form-control">
                    <option value="normal">@Html.Resource("Normal")</option>
                    <option value="compact">@Html.Resource("Compact")</option>
                </select>
            </div>
        </div>
    </div>
</div>
        
<expander expander-title='@Html.Resource("MoreOptions")'>
    <div class="form-group">
        <label for="captchaTemplateName">@Html.Resource("Template")</label>

        <div class="row">
            <div class="col-xs-6">
                <select id="captchaTemplateName" ng-model="properties.WriteTemplateName.PropertyValue" class="form-control">
                    @foreach (var viewName in Html.GetViewNames(((Telerik.Sitefinity.Mvc.Proxy.MvcProxyBase)Model).GetController(), @"^Write\.(?<viewName>[\w\s]*)$"))
                    {
                        <option value="@viewName">@viewName</option>
                    }
                </select>
            </div>
        </div>
    </div>
</expander>
